<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>Register</title>
    <link rel="stylesheet" href="/css/bootstrap.css">
  </head>
  <body>
    <div class="container">
       <h1>Register Form</h1>
       <form class="" action="/pages/register" method="post">

            <% if(data.length >0){ %>
              <div class="alert alert-danger">
              <%= data %>
            </div>
            <%  } %>
         <div class="form-group">
           <label for="name">Name*</label>
           <input type="text" name="name" required  class='form-control' placeholder="enter your name">
         </div>

         <div class="form-group">
           <label for="email">Email*</label>
           <input type="email" name="email" required  class='form-control' placeholder="enter your eamil">
         </div>

         <div class="form-group">
           <label for="password1">Password*</label>
           <input type="password" name="password1" required  class='form-control' placeholder="enter your password">
         </div>

         <div class="form-group">
           <label for="password2">Password*</label>
           <input type="password" name="password2"  required class='form-control' placeholder="enter your password">
         </div>
         <button type="submit" class="btn btn-primary">Save</button>
         <a href="/" class="btn btn-secondary">Cancel</a>
         <a href="/pages/login" class="btn btn-success">Login</a>

     </form>
    </div>
  </body>
</html>
